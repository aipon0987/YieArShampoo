<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_haikei">

    <ImageView
        android:layout_width="124dp"
        android:layout_height="105dp"
        android:layout_gravity="top"
        android:src="@drawable/leftup"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="36dp"/>

    <ImageView
        android:layout_width="124dp"
        android:layout_height="105dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="50dp"
        android:src="@drawable/rightup"
        android:layout_marginRight="36dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/leftdown"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="48dp"/>

    <ImageView
        android:layout_width="124dp"
        android:layout_height="105dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="255dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/rightdown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:text="@string/title_name"
        android:textColor="@color/light_green"
        android:textSize="48dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="102dp"/>
    
    <ImageView
        android:layout_width="412dp"
        android:layout_height="412dp"
        android:src="@drawable/top_character"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="88dp"
        android:text="@string/start_buttom_name"
        android:textColor="@color/string_blue"
        android:layout_gravity="bottom|center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:backgroundTint="@color/background_buttom_color"
        android:elevation="30dp"/>

</FrameLayout>